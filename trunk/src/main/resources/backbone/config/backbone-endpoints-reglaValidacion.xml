<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="reglaValidacion-endpoint" abstract="true"
		parent="parent-endpoint">
		<property name="templateModule" value="reglaValidacion" />
		<property name="xslModule" value="reglaValidacion" />
	</bean>

<!-- Bean declarado para obtener catalogo rol existente en BD-->

	<bean id="OBTIENE_REGLAS_DE_VALIDACION" parent="reglaValidacion-endpoint">
		<property name="templateName" value="obtieneReglasDeValidacion.vm" />
		<property name="xslName" value="obtieneReglasDeValidacion.xsl" />
		<property name="unmarshallClass" value="java.util.ArrayList" />
	</bean>
	
	<bean id="OBTIENE_LISTA_BLOQUES" parent="reglaValidacion-endpoint">
		<property name="templateName" value="obtieneListaBloques.vm" />
		<property name="xslName" value="obtieneListaBloques.xsl" />
		<property name="unmarshallClass" value="java.util.ArrayList" />
	</bean>
	
	<bean id="OBTIENE_LISTA_VALIDACIONES" parent="reglaValidacion-endpoint">
		<property name="templateName" value="obtieneListaValidaciones.vm" />
		<property name="xslName" value="obtieneListaValidaciones.xsl" />
		<property name="unmarshallClass" value="java.util.ArrayList" />
	</bean>
	
	<bean id="OBTIENE_LISTA_CONDICIONES" parent="reglaValidacion-endpoint">
		<property name="templateName" value="obtieneListaCondiciones.vm" />
		<property name="xslName" value="obtieneListaCondiciones.xsl" />
		<property name="unmarshallClass" value="java.util.ArrayList" />
	</bean>

	<bean id="ASOCIAR_REGLA_VALIDACION" parent="reglaValidacion-endpoint">
		<property name="templateName" value="asociarReglaValidacion.vm" />
		<property name="transformResult" value="false" />
        <property name="unmarshallResult" value="false" />
	</bean>
	
	<bean id="ELIMINAR_REGLA_VALIDACION" parent="reglaValidacion-endpoint">
		<property name="templateName" value="eliminarReglaValidacion.vm" />
		<property name="transformResult" value="false" />
        <property name="unmarshallResult" value="false" />
	</bean>
	
</beans>

