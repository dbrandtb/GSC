<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="plan-endpoint" abstract="true"
		parent="parent-endpoint">
		<property name="templateModule" value="plan" />
		<property name="xslModule" value="plan" />
	</bean>

<!-- Bean declarado para obtener planes totales existentes en BD-->

	<bean id="OBTIENE_PLANES_MANTTO" parent="plan-endpoint">
		<property name="templateName" value="obtienePlan.vm" />
		<property name="xslName" value="obtienePlan.xsl" />
		<property name="unmarshallClass"
			value="java.util.ArrayList" />
	</bean>
	
<!-- Bean decalrado para obtener productos totales existentes en la BD -->
	
	<bean id="OBTIENE_PRODUCTOS" parent="plan-endpoint">
		<property name="templateName" value="obtieneProducto.vm" />
		<property name="xslName" value="obtieneProducto.xsl" />
		<property name="unmarshallClass"
			value="java.util.ArrayList" />
	</bean>
	
<!-- Bean declarado para insertar un nuevo plan  -->
	
	<bean id="INSERTA_PLAN" parent="plan-endpoint">
		<property name="templateName" value="insertaPlan.vm" />
		<property name="transformResult" value="false" />
        <property name="unmarshallResult" value="false" />
	</bean>
	
<!-- Bean declarado para editar un plan existente en la BD -->
	
	<bean id="EDITA_PLAN" parent="plan-endpoint">
        <property name="templateName" value="editaPlan.vm" />
        <property name="transformResult" value="false" />
        <property name="unmarshallResult" value="false" />
    </bean>
    
<!-- Bean declarado para obtener un solo objeto de la BD -->

	<bean id="OBTIENE_PLAN" parent="plan-endpoint">
        <property name="templateName" value="cargaPlan.vm" />
        <property name="xslName" value="editaPlan.xsl" />
        <property name="unmarshallClass" value="mx.com.aon.portal.model.plan.PlanVO" />
    </bean>
    
<!-- Bean declarado para exportar a diferentes formatos los planes existentes en la BD -->    
    
    <bean id="EXPORT_PLANES" parent="plan-endpoint">
        <property name="templateName" value="obtienePlan.vm" />
        <property name="xslName" value="exportPlan.xsl" />
        <property name="unmarshallClass" value="java.util.ArrayList" />
    </bean>
    
<!-- Bean declarado para copiar un plan existente en la BD -->    
    
    <bean id="COPIA_PLAN" parent="plan-endpoint">
        <property name="templateName" value="copiaPlan.vm" />
        <property name="transformResult" value="false" />
        <property name="unmarshallResult" value="false" />
    </bean>
    
<!-- Bean declarado para borrar un plan existente en la BD -->    
    
    <bean id="BORRAR_PLAN" parent="plan-endpoint">
        <property name="templateName" value="borraPlan.vm" />
        <property name="transformResult" value="false" />
        <property name="unmarshallResult" value="false" />
    </bean>
</beans>



