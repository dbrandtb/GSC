<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="configmenu-endpoint" abstract="true"
        parent="parent-endpoint">
        <property name="templateModule" value="configmenu" />
        <property name="xslModule" value="configmenu" />
    </bean>

    <!-- Bean declarado para obtener planes totales existentes en BD-->
    <bean id="OBTIENE_OPCIONES_CONFIGMENU" parent="configmenu-endpoint">
        <property name="templateName" value="obtieneOpcionesConfigmenu.vm" />
        <property name="xslName" value="obtieneOpcionesConfigmenu.xsl" />
        <property name="unmarshallClass" value="mx.com.aon.portal.util.WrapperResultados" />
    </bean>
    
    <bean id="EXPORT_OPCIONES_CONFIGMENU" parent="configmenu-endpoint">
        <property name="templateName" value="obtieneOpcionesConfigmenu.vm" />
        <property name="xslName" value="exportOpcionesConfigmenu.xsl" />
        <property name="unmarshallClass"
            value="java.util.ArrayList" />
    </bean>
    
    <!-- Bean declarado para insertar una nueva opcion -->    
    <bean id="INSERTA_OPCION" parent="configmenu-endpoint">
        <property name="templateName" value="insertaOpcion.vm" />
        <property name="xslModule" value="catalogs" />
        <property name="xslName" value="obtieneMensajes.xsl" />
        <property name="unmarshallClass" value="mx.com.aon.portal.model.MensajesVO" />
    </bean>
    
    <!-- Bean declarado para editar una opcion existente en la BD -->    
    <bean id="EDITA_OPCION" parent="configmenu-endpoint">
        <property name="templateName" value="editaOpcion.vm" />
        <property name="xslModule" value="catalogs" />
        <property name="xslName" value="obtieneMensajes.xsl" />
        <property name="unmarshallClass" value="mx.com.aon.portal.model.MensajesVO" />
    </bean>
 
    <!-- Bean decalrado para obtener productos totales existentes en la BD -->    
    <bean id="VALIDA_BORRADO" parent="configmenu-endpoint">
        <property name="templateName" value="validaBorrado.vm" />
        <property name="xslName" value="validaBorrado.xsl" />
        <property name="unmarshallClass"
            value="mx.com.aon.portal.model.configmenu.OpcionVO" />
    </bean>
       
    <!-- Bean declarado para borrar una configuracion -->                
    <bean id="BORRA_OPCION" parent="configmenu-endpoint">      
        <property name="templateName" value="borraOpcion.vm"/>
        <property name="xslModule" value="catalogs" />
        <property name="xslName" value="obtieneMensajes.xsl" />
        <property name="unmarshallClass" value="mx.com.aon.portal.model.MensajesVO" />
    </bean>
</beans>
