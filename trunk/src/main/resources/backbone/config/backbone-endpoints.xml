<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="fileSaver" class="com.wittyconsulting.backbone.util.FileSaver">
        <property name="directory" value="/opt/ice/gseguros/icebroker/backbone-tmp" />
    </bean>

    <bean id="parent-endpoint" abstract="true" class="com.wittyconsulting.backbone.endpoint.support.BasicBackboneEndpoint" init-method="init">
        <property name="devMode" value="false" />
        <property name="fileSaver" ref="fileSaver" />
        <property name="service" ref="jdbcService" />
        <property name="templateDir" value="classpath:backbone/vm" />
        <property name="xslDir" value="classpath:backbone/xsl" />
        
        <property name="transformResult" value="true" />
        <property name="unmarshallResult" value="true" />
    </bean>

</beans>
