<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!--
        Action asociado por inyeccion al archivo de conf. de struts-principal para el servicio de consulta
        para los datos de la tabla paginada de Configuracion de Pagina Principal. 
    -->
    <bean id="configMenuUsuario" class="mx.com.aon.portal.web.menuusuario.ConfigMenuUsuarioAction" scope="prototype">
        <property name="menuUsuarioManager" ref="menuUsuarioManager" />
        <property name="catalogManager" ref="catalogManager" />
    </bean>
    <!--
        Action asociado por inyeccion al archivo de conf. de struts-principal para el servicio de copia 
        de una configuracion existente. 
    -->
    <bean id="menuUsuario" class="mx.com.aon.portal.web.menuusuario.MenuUsuarioAction" scope="prototype">
        <property name="menuUsuarioManager" ref="menuUsuarioManager" />
        <property name="catalogManager" ref="catalogManager" />
    </bean>
    <!-- 
    Action asociado por inyeccion al archivo de conf. de struts-principal para el servicio de exportacion
    de los datos a diversos formatos 
    -->
    <bean id="exportMenuUsuarioAction" class="mx.com.aon.portal.web.menuusuario.ExportMenuUsuarioAction" scope="prototype">
        <property name="exportMediator" ref="exportMediator"/>
        <property name="exportModel" ref="exportModelMenuUsuario"/>
    </bean>
    <!--
        Dependencia agregada de servicio que exporta los datos a un objeto con el modelo
        para poder ser exportados 
    -->
    <bean id="exportModelMenuUsuario" class="mx.com.aon.portal.service.impl.menuusuario.ExportMenuUsuarioManagerImpl" scope="prototype">
        <property name="endpoints">
            <map>
                <entry key="EXPORT_CONFIGURACIONES">
                    <ref bean="EXPORT_CONFIGURACIONES" />
                </entry>
            </map>
        </property>
    </bean>
</beans>
