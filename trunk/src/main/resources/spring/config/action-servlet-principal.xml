<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!--
		Action asociado por inyeccion al archivo de conf. de struts-principal para el servicio de consulta
		para los datos de la tabla paginada de Configuracion de Pagina Principal. 
	-->
	<bean id="obtieneRolAction" class="mx.com.aon.portal.web.principal.ObtieneRolAction" scope="prototype">
		<property name="principalManagerJdbcTemplate" ref="principalManagerJdbcTemplate" />
		<property name="principalManager" ref="principalManager" />
	</bean>
	<!--
		Action asociado por inyeccion al archivo de conf. de struts-principal para el servicio de copia 
		de una configuracion existente. 
	-->
	<bean id='principalAction' class="mx.com.aon.portal.web.principal.PrincipalAction" scope="prototype">
		<!--<property name="principalManagerJdbcTemplate" ref="principalManagerJdbcTemplate" />-->
		<property name="principalManager" ref="principalManager" />
	</bean>
	<!-- 
	Action asociado por inyeccion al archivo de conf. de struts-principal para el servicio de exportacion
	de los datos a diversos formatos 
	-->
    <bean id="exportConfigAction" class="mx.com.aon.portal.web.principal.ExportConfiguracionAction" scope="prototype">
        <property name="exportMediator" ref="exportMediator"/>
        <property name="exportModel" ref="exportModelConfiguracion"/>
    </bean>
	<!--
		Dependencia agregada de servicio que exporta los datos a un objeto con el modelo
		para poder ser exportados 
	-->
	<bean id="exportModelConfiguracion" class="mx.com.aon.portal.service.impl.principal.ExportConfiguracionManagerImpl" scope="prototype">
		<property name="endpoints">
			<map>
				<entry key="EXPORT_CONFIGURACIONES">
					<ref bean="EXPORT_CONFIGURACIONES" />
				</entry>
			</map>
		</property>
	</bean>
	<bean id="principalPaginaAction" class="mx.com.aon.portal.web.principal.PrincipalPaginaAction" scope="prototype">
		<property name="principalManager" ref="principalManager" />
	</bean>
	<!--  -->
	<bean id="exportPaginasAction" class="mx.com.aon.portal.web.principal.ExportPaginasAction" scope="prototype">
        <property name="exportMediator" ref="exportMediator"/>
        <property name="exportModel" ref="exportModelPaginas"/>
    </bean>
	<!--
		Dependencia agregada de servicio que exporta los datos a un objeto con el modelo
		para poder ser exportados 
	-->
	<bean id="exportModelPaginas" class="mx.com.aon.portal.service.impl.principal.ExportPaginasManagerImpl" scope="prototype">
		<property name="endpoints">
			<map>
				<entry key="EXPORT_PAGINAS">
					<ref bean="EXPORT_PAGINAS" />
				</entry>
			</map>
		</property>
	</bean>
	
	
	<!-- EXPORTADOR GENERICO: -->
	<!-- 
	Action asociado por inyeccion al archivo de conf. de struts-test para el servicio de exportacion
	de los datos a diversos formatos 
	-->
    <bean id="exportadorAction" class="mx.com.aon.portal.web.ExportadorAction" scope="prototype">
        <property name="exportMediator" ref="exportMediator"/>
        <property name="exportModel" ref="exportModel"/>
    </bean>
    
</beans>

