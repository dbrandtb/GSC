<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="alertasUsuario" extends="json-default" namespace="/alertasUsuario">


    <!--
    Configuracion del Action con tipo de respuesta JSON, esto generara a partir
    de los atributos la respuesta en formato JSON para el Reader de ExtJs
    -->
    <action name="buscarAlertasUsuario" class="listaAlertasUsuarioAction" method="buscarAlertasUsuario">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="guardarAlerta" class="alertasUsuarioAction" method="cmdGuardarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="getAlerta" class="alertasUsuarioAction" method="cmdGetAlerta">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="irConsultarAlertas" class="listaAlertasUsuarioAction" method="irConsultarAlertas">
    	<result type="chain" name="buscarAlertas">consultaAlertas</result>
    </action>
    
	<action name="borrarAlerta" class="alertasUsuarioAction" method="cmdBorrarClick">
    	<result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

	</package>

</struts>
