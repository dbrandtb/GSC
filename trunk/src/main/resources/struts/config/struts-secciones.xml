<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="secciones" extends="json-default" namespace="/secciones">


        <!--
        Configuracion del Action con tipo de respuesta JSON, esto generara a partir
        de los atributos la respuesta en formato JSON para el Reader de ExtJs
        -->
        <action name="buscarSecciones" class="listaSeccionesAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

        <action name="getSeccion" class="seccionesAction" method="cmdGetClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

        <action name="guardarNuevaSeccion" class="seccionesAction" method="cmdAgregarClick">
            <result type="chain" name="getAgrupacionPapel">agrupacionPapel</result>
        </action>

        <action name="guardarSeccion" class="seccionesAction" method="cmdAgregarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

        <action name="borrarSeccion" class="seccionesAction" method="cmdBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

        <action name="exportarSeccion" class="seccionesAction" method="cmdExportarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>
        
        <action name="exportarBusquedaSecciones" class="listaSeccionesAction" method="cmdExportarClick">
				<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
	</action>    
	
    </package>

</struts>
