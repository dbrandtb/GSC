<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">


<struts>
	<include file="struts-default.xml" />

	<package name="layoutArbol" extends="json-default" namespace="/layoutArbol">

		<!--
		Redireccionamiento de action a jsp 
		-->


		<!-- 
		Configuracion del Action con tipo de respuesta JSON, esto generara a partir
		de los atributos la respuesta en formato JSON para el Reader de ExtJs 
		-->
		<action name="LayoutArbol">
			<result>/WEB-INF/jsp/productos/layoutBrowser/editarDesdeGrid.jsp</result>
		</action>
		
		<action name="LayoutCard">
			<result>/WEB-INF/jsp/productos/layoutBrowser/layoutCard.jsp</result>
		</action>
		
	</package>

</struts>
