<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="ingresarEncuesta" extends="json-default" namespace="/ingresarEncuesta">


    <action name="obtenerPreguntaEncuestas" class="ingresarEncuestaAction" method="cmdPreguntaEncuestaClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
	</action>

    <action name="obtenerPreguntaEncuestasSig" class="ingresarEncuestaAction" method="cmdPreguntaEncuestaSigClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
	</action>

    <action name="respuestaEncuestaGuardar" class="ingresarEncuestaAction" method="cmdRespuestaEncuestaGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
	</action>

	<action name="irIngresarEncuestas" class="ingresarEncuestaAction" method="cmdIrIngresarEncuestasClick">
            <result type="chain" name="irPantallaIngresarEncuestas">ingresarEncuesta</result>
    </action>

	</package>

</struts>
