<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="OrdenesDeCompras" extends="json-default" namespace="/ordenesDeCompras">


			<action name="buscarOrdenesDeCompras" class="listaOrdenesDeComprasAction" method="cmdBuscarClick">
			<result type="json"><param name="ignoreHierarchy">false</param></result>
			</action>   
			
			<action name="obtenerOrdenesDeComprasPersonas" class="ordenesDeComprasAction"  method="cmdGetClickPersona">
				<result type="json"><param name="ignoreHierarchy">false</param></result>
			</action>
			
			<action name="obtenerOrdenesDeComprasDireccion" class="listaCarritoComprasAction"  method="cmdObtenerDireccionClick">
				<result type="json"><param name="ignoreHierarchy">false</param></result>
			</action>
			
			<action name="obtenerOrdenesDeComprasPagar" class="listaCarritoComprasAction"  method="obtenerDetOrdenCarritoCompras">
				<result type="json"><param name="ignoreHierarchy">false</param></result>
			</action>
			
			<action name="obtenerOrdenesDeComprasDetalle" class="listaCarritoComprasAction"  method="cmdObtenerDetalleMontosClick">
				<result type="json"><param name="ignoreHierarchy">false</param></result>
			</action>

            <action name="obtenerOrdenesDeComprasParcialTotal" class="carritoComprasAction"  method="calculaDescuento">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
            </action>		
		
			<action name="finalizarOrdenesDeCompras" class="ordenesDeComprasAction"  method="cmdGuardarClick">
				<result type="json"><param name="ignoreHierarchy">false</param></result>
			</action>
			
			<action name="irDetalleOrdenesDeCompras" class="listaOrdenesDeComprasAction" method="cmdIrDetalleOrdenesDeCompras">
				<result type="chain" name="detallesOrdenes">detalleOrdenesDeCompras</result>
			</action>
			
			<action name="regresarOrdenesDeCompras" class="listaOrdenesDeComprasAction" method="cmdRegresarOrdenesDeCompras">
				<result type="chain" name="ordenesDeCompras">ordenesDeCompras</result>
			</action>
	
	</package>

</struts>
