    <package name="polizas" extends="json-default" namespace="/polizas">
    
    
		
		<action name="buscarPolizasCancelar" class="listaPolizaAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
