            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
	
		<action name="revertirPolizasCanceladas" class="polizaAction" method="revertirPolizasCanceladasClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
	
	<action name="irRehabilitacionManual" class="polizaAction" method="irRehabilitacionManual">
            <result type="chain" name="rehabilitacionManual">rehabilitacionManual</result>
		</action>

	<action name="irDetallePoliza" class="emisionAction" method="obtienePantalla">
		<result name="input">/jsp/procesos/emision/detallePoliza.jsp</result>
	</action>
	
