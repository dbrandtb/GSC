<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<include file="struts-default.xml" />

	<package name="configurarCatalogosCompuestos" extends="json-default" namespace="/configurarCatalogosCompuestos">
	
		<action name="configuradorCatalogoCompuesto" class="configuradorCatalogosCompuestosAction" method="cmdConfigurarCatalogoCompuesto">
            <result type="chain" name="configurarCatalogo">configurarCatalogoCompuesto</result>
		</action>
		
		<action name="obtenerDatosGrilla" class="configuradorCatalogosCompuestosAction" method="cmdBuscarDatosGrilla" >
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

		<action name="guardarRegistro" class="configuradorCatalogosCompuestosAction" method="cmdGuardarDatos" >
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

		<action name="actualizarRegistro" class="configuradorCatalogosCompuestosAction" method="cmdActualizarDatos" >
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

		<action name="borrarRegistro" class="configuradorCatalogosCompuestosAction" method="cmdBorrar">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>		        

        <!-- action name="guardarConfigurarAccionesRenovacion" class="configurarAccionesRenovacionAction" method="cmdGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action-->
        
        <action name="exportarCatalogosCompuestos" class="configuradorCatalogosCompuestosAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>  	        
		
		<!--action name="regresarConsultaConfiguracionRenovacion" class="configurarAccionesRenovacionAction" method="cmdRegresarConsultaConfiguracionRenovacion">
	    	<result type="chain" name="consultaConfiguracionRenovacion">consultaConfiguracionRenovacion</result>
	  </action-->
        
    </package>
    

</struts>
