<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


    <include file="struts-default.xml" />                           

    <package name="metodosCancelacion" extends="json-default" namespace="/metodosCancelacion">

		
		<action name="buscarMetodosCancelacion" class="listaMetodosCancelacionAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="getMetodoCancelacion" class="metodosCancelacionAction" method="cmdGetClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
	    <action name="guardarMetodosCancelacion" class="metodosCancelacionAction" method="cmdAgregarGuardarClick">
	        <result type="json"><param name="ignoreHierarchy">false</param></result>
	    </action>
	    
	    <action name="borrarMetodosCancelacion" class="metodosCancelacionAction" method="cmdBorrarClick">
	        <result type="json"><param name="ignoreHierarchy">false</param></result>
	    </action>
	   
        <action name="exportarMetodosCancelacion" class="listaMetodosCancelacionAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>        
     
    </package>

</struts>
