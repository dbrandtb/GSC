<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <include file="struts-default.xml" />                           

    <package name="consultaConfiguracionRenovacion" extends="json-default" namespace="/consultaConfiguracionRenovacion">
		
		<action name="obtenerClientesYTiposDeRenovacion" class="listaConsultaConfiguracionRenovacionAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="exportarClientesYTiposDeRenovacion" class="listaConsultaConfiguracionRenovacionAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>
		
		<action name="obtenerConfiguracionCliente" class="consultaConfiguracionRenovacionAction" method="cmdGetClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="guardarConfiguracionCliente" class="consultaConfiguracionRenovacionAction" method="cmdGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="borrarConfiguracionRenovacion" class="consultaConfiguracionRenovacionAction" method="cmdBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
    	
    	<action name="irRolesRenovacionReporte" class="consultaConfiguracionRenovacionAction" method="cmdIrRolesRenovacionReporte">
				<result type="chain" name="rolesRenovacion">rolesRenovacion</result>
		</action>
		
		 <action name="validarRolesParaIrAcciones" class="consultaConfiguracionRenovacionAction" method="validarRolesParaIrAcciones">
				<result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="irAccionesRenovacionReporte" class="consultaConfiguracionRenovacionAction" method="cmdIrAccionesRenovacionReporte">
				<result type="chain" name="accionesRenovacionReporte">configurarAccionesRenovacion</result>
		</action>
		
		<action name="irRangosRenovacionReporte" class="consultaConfiguracionRenovacionAction" method="cmdIrRangosRenovacionReporte">
				<result type="chain" name="rangosRenovacionReporte">rangosRenovacionReporte</result>
		</action>	
    </package>

</struts>