<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <include file="struts-default.xml" />                           

    <package name="rolesRenovacion" extends="json-default" namespace="/rolesRenovacion">
		
		<action name="obtenerRolesRenovacion" class="listaRolesRenovacionAction" method="cmdObtenerRoles">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="getModel" class="listaRolesRenovacionAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>
		
		<action name="getEncabezadoRolesRenovacion" class="rolesRenovacionAction" method="cmdGet">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="agregarGuardarRolRenovacion" class="rolesRenovacionAction" method="cmdAgregarGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="borrarRolRenovacion" class="rolesRenovacionAction" method="cmdBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="regresarConsultaConfiguracionRenovacion" class="rolesRenovacionAction" method="cmdRegresarClick">
            <result type="chain" name="consultaConfiguracionRenovacion">consultaConfiguracionRenovacion</result>
		</action>
    	
    </package>

</struts>