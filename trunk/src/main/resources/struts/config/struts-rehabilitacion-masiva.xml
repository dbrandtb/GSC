<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <include file="struts-default.xml" />                           

    <package name="rehabilitacionMasiva" extends="json-default" namespace="/rehabilitacionMasiva">
		
		<action name="buscarPolizasARehabilitar" class="listaRehabilitacionMasivaAction" method="cmdBuscarPolizasARehabilitar">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="rehabilitarPoliza" class="rehabilitacionMasivaAction" method="cmdRehabilitarPoliza">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="exportarPolizasARehabilitar" class="listaRehabilitacionMasivaAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>  
		
    </package>

</struts>

