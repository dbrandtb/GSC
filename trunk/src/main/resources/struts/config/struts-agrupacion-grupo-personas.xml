<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <include file="struts-default.xml" />                           

    <package name="agrupacionGrupoPersonas" extends="json-default" namespace="/agrupacionGrupoPersonas">
    
    	<action name="obtenerAgrupacionGrupoPersonas" class="agrupacionGrupoPersonasAction" method="cmdGetClickAgp">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>
		
		<action name="buscarGruposPersonas" class="listaAgrupacionGrupoPersonasAction" method="cmdGetClickGp">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="agregarAgrupacionGrupoPersona" class="agrupacionGrupoPersonasAction" method="cmdInsertarClick">
           <result type="json"><param name="ignoreHierarchy">false</param></result>
       </action>
       
       <action name="guardarAgrupacionGrupoPersona" class="agrupacionGrupoPersonasAction" method="cmdGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>     
	
		<action name="irAgrupacionPolizas" class="agrupacionGrupoPersonasAction" method="irAgrupacionPolizasClick">
        <result type="chain" name="agrupacionPolizas">agrupacionPolizas</result>
    	</action>
    	
    	<action name="borrarGrupo" class="agrupacionGrupoPersonasAction" method="cmdBorrarClick">
         <result type="json"><param name="ignoreHierarchy">false</param></result>
    	</action>
    	
    	<action name="irAsignarPolizas" class="agrupacionGrupoPersonasAction"  method="irAsignarPolizasClick">
	        <result type="chain" name="consultaPolizasMaestras">
	          <param name="actionName">consultaPolizasMaestras</param>
	          <param name="namespace">/procesoemision</param>
	        </result>
    	</action>
    	
    	<action name="actualizarAgrupacionGrupoPersona" class="agrupacionGrupoPersonasAction" method="cmdActualizarClick">
        	<result type="json"><param name="ignoreHierarchy">false</param></result>
    	</action>
    	
    
    </package>

</struts>