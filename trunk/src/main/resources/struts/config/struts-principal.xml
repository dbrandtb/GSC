<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml" />

	<package name="principal" extends="json-default" namespace="/principal">

		<!--
		Redireccionamiento de action a jsp 
		-->
		<action name="obtieneRoles" class="obtieneRolAction">
			<result name="success">/jsp/principal/principal.jsp</result>
            <result name="input">/jsp/principal/principal.jsp</result>
        </action>
        
        <action name="configurar" class="obtieneRolAction" method="rolesJson">
			<result name="success">/jsp/principal/configuracion.jsp</result>
            <result name="input">/jsp/principal/configuracion.jsp</result>
        </action>
        
		<!-- 
		Configuracion del Action con tipo de respuesta JSON, esto generara a partir
		de los atributos la respuesta en formato JSON para el Reader de ExtJs 
		-->
		<action name="roles" class="obtieneRolAction" method="rolesJson">
			<result name="success" type="json"><param name="ignoreHierarchy">false</param></result>
		</action> 
		<!--
		Configuracion del Action con tipo de respuesta JSON, esto generara a partir 
		de los atributos la respuesta en Formato JSON para el Reader de ExtJS y cargar el 
		combo de Clientes.
		-->
		<action name="clienteAction" class="obtieneRolAction" method="cmdGetComboCliente">
			<result name="success" type="json" />
		</action>
		<!--
		Configuracion del Action con tipo de respuesta JSON, esto generara a partir 
		de los atributos la respuesta en Formato JSON para el Reader de ExtJS y cargar el 
		combo de Roles.
		-->
		<action name="rolAction" class="obtieneRolAction" method="cmdGetComboRol">
			<result name="success" type="json" />
		</action>
	
		<!--
		Configuracion del Action con tipo de respuesta JSON, esto generara a partir 
		de los atributos la respuesta en Formato JSON para el Reader de ExtJs y carga el
		combo de Secciones.
		-->
		<action name="seccionAction" class="obtieneRolAction" method="cmdGetComboSeccion">
			<result name="success" type="json" />
		</action> 
		<!--
		Configuracion del Action con tipo de respuesta JSON, esto generara, a partir 
		de los atributos la respuesta en Formato JSON para el reader de ExtJs y carga el 
		combo de tipos.
		-->
		<action name="tipoAction" class="obtieneRolAction" method="cmdGetComboTipo">
			<result name="success" type="json" />
		</action>
		<!--
		Configuracion del Action con tipo de Respuesta Json para insertar una nueva 
		configuracion de la pagina principal.
		-->
		<action name="guardarAction" class="obtieneRolAction" method="addRoles">
		    <result name="success">/resources/jsp-script/configurador/pantallas/jsonResponseFileTree.jsp</result>
		</action>

		<action name="guardarActionJSON" class="obtieneRolAction" method="addRoles">
		    <result name="success" type="json"><param name="ignoreHierarchy">false</param></result>
		</action>

        <!-- Action para Editar Configuracion "el a modificar" -->
        <action name="editarConf" class="obtieneRolAction" method="editarConf">
          	<result name="success">/resources/jsp-script/configurador/pantallas/jsonResponseFileTree.jsp</result>
          	<!-- el original  <result name="success"/> -->
        </action>

        <action name="editarConfJSON" class="obtieneRolAction" method="editarConf">
          	<result name="success" type="json"><param name="ignoreHierarchy">false</param></result>
          	<!-- el original  <result name="success"/> -->
        </action>

        <action name="uploadFiles" class="obtieneRolAction" method="uploadFiles">
          	<result name="success">/resources/jsp-script/configurador/pantallas/jsonResponseFileTree.jsp</result>
          	<!-- el original  <result name="success"/> -->
        </action>

		<!--
		Configuracion del Action con tipo de Respuesta Json para copiar una 
		configuracion de la pagina principal de Configuracion de Pagina principal. 
		 -->
		<action name="copiarAction" class="principalAction" method="copiarRoles">
			<result name="success" type="json"/>
			<result name="input">/jsp/principal/principal.jsp</result>
		</action>
		<!--
		Configuracion del Action con tipo de Respuesta Json para borrar una
		configuracion de la pagina principal de Configuracion de Pagina Principal 
		 -->
		 <action name="borrarAction" class="principalAction" method="borrarRol">
			<result name="success" type="json"><param name="ignoreHierarchy">false</param></result>
		 	<!--result name="input">/jsp/principal/principal.jsp</result-->
		 </action>
		<!--  
		Configuración del Action para la exportación del documentos, se tiene que
		declarar como tipo de respuesta "stream" y el tipo mime de retorno, asi como
		el atributo asociado al flujo de datos con el archivo y el nombre del archivo
		generado, junto con el tamaño del buffer de transferencia
		--> 
		<action name="exportConfig" class="exportConfigAction">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">8000</param>
			</result>
		</action>
		<action name="guarda" class="principalPaginaAction" method="guardaPaginas">
			<result type="json"><param name="ignoreHierarchy">false</param></result>
			<!-- <result name="success" type="json"/>
		    <result name="input">/jsp/principal/principal.jsp</result> -->
		</action>
		
		<action name="paginas" class="principalPaginaAction" method="cmdGetPaginas">
		 	<result name="success" type="json"/>
		 	<result name="input">/jsp/principal/principal.jsp</result>
		</action>

		
		<action name="borraPagina" class="principalPaginaAction" method="deletePagina">
		 	<result name="success" type="json"/>
		 	<result name="input">/jsp/principal/principal.jsp</result>
		</action>
		<action name="copiaPagina" class="principalPaginaAction" method="copiaPagina">
		 	<result name="success" type="json"/>
		 	<result name="input">/jsp/principal/principal.jsp</result>
		</action>
		<action name="editaPagina" class="principalPaginaAction" method="editaPaginas">
		 	<result name="success" type="json"/>
		 	<result name="input">/jsp/principal/principal.jsp</result>
		</action>
		<action name="exportPaginas" class="exportPaginasAction">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">8000</param>
			</result>
		</action>
		
		
		<!-- EXPORTADOR GENERICO SIN PARAMETROS: -->
        <!--  
        Configuración del Action para la exportación del documentos, se tiene que
        declarar como tipo de respuesta "stream" y el tipo mime de retorno, asi como
        el atributo asociado al flujo de datos con el archivo y el nombre del archivo
        generado, junto con el tamaño del buffer de transferencia
        --> 
		<action name="exportGenerico" class="exportadorAction">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">8000</param>
			</result>
		</action>
		
		<!-- EXPORTADOR GENERICO QUE RECIBE PARAMETROS: -->
		<!--  
        Configuración del Action para la exportación del documentos, se tiene que
        declarar como tipo de respuesta "stream" y el tipo mime de retorno, asi como
        el atributo asociado al flujo de datos con el archivo y el nombre del archivo
        generado, junto con el tamaño del buffer de transferencia
        --> 
        <action name="exportGenericoParams" class="exportadorAction" method="generaArchivo">
            <result name="success" type="stream">
                <param name="contentType">${contentType}</param>
                <param name="inputName">inputStream</param>
                <param name="contentDisposition">filename="${filename}"</param>
                <param name="bufferSize">8000</param>
            </result>
        </action>
        
        <action name="exportarConsultaPolizaMaestra" class="emisionAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">application/binary</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>         

		<action name="validaConfiguracionCompleta" class="principalAction" method="cmdValidarConfiguracionCompleta">
			<result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="checkSessionExport" class="exportadorAction" method="checkSession">
			<result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>

	</package>
</struts>

