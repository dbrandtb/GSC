<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="planesCliente" extends="json-default" namespace="/planesCliente">


    <!--
    Configuracion del Action con tipo de respuesta JSON, esto generara a partir
    de los atributos la respuesta en formato JSON para el Reader de ExtJs
    -->
    <action name="buscarPlanesCliente" class="listaPlanesXClienteAction" method="cmdBuscarPlanXCliente">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>


    <action name="getPlanCliente" class="planxClienteAction"  method="cmdGetClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>


    <action name="guardarNuevoPlanCliente" class="planxClienteAction"  method="cmdGuardarNuevoClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="guardarPlanCliente" class="planxClienteAction"  method="cmdGuardarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>


    <action name="borrarPlanCliente" class="planxClienteAction"  method="cmdBorrarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="irBuscarPlanesCliente" class="listaPlanesXClienteAction" method="irBuscarPlanesCliente">
        <result type="chain" name="buscarPlanesCliente">planesCliente</result>
    </action>

    <action name="exportarBusquedaPlanesCliente" class="listaPlanesXClienteAction" method="cmdExportPlanesClienteClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
	</action>        
		
	</package>

</struts>
