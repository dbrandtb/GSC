<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<include file="struts-default.xml" />

	<package name="configurarAccionesRenovacion" extends="json-default" namespace="/configurarAccionesRenovacion">
	
		<action name="buscarConfigurarAccionesRenovacion" class="listaConfigurarAccionesRenovacionAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="borrarConfigurarAccionesRenovacion" class="configurarAccionesRenovacionAction" method="cmdBorrarClick" >
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

		<action name="getConfigurarAccionesRenovacion" class="configurarAccionesRenovacionAction" method="cmdGetClick" >
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

		<action name="getConfigurarAccionesRenovacionAccion" class="configurarAccionesRenovacionAction" method="cmdGetClickAccion">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>		        

        <action name="guardarConfigurarAccionesRenovacion" class="configurarAccionesRenovacionAction" method="cmdGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>
        
        <action name="exportarConfigurarAccionesRenovacion" class="listaConfigurarAccionesRenovacionAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>  	        
		
		<action name="regresarConsultaConfiguracionRenovacion" class="configurarAccionesRenovacionAction" method="cmdRegresarConsultaConfiguracionRenovacion">
	    	<result type="chain" name="consultaConfiguracionRenovacion">consultaConfiguracionRenovacion</result>
	  </action>
        
    </package>
    

</struts>
