<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <include file="struts-default.xml" />
    
    <package name="endosos" extends="json-default" namespace="/endosos">
        
        <action name="principal" class="EndososAction" method="marco">
            <result name="success">/jsp-script/proceso/endosos/marcoEndosos.jsp</result>
        </action>
        
        <action name="obtenerEndosos" class="EndososAction" method="obtenerEndosos">
            <result name="success" type="json" />
        </action>
        
        <action name="pantallaEndosoCoberturas" class="EndososAction" method="pantallaEndosoCoberturas">
            <result name="success">/jsp-script/proceso/endosos/endosoCoberturas.jsp</result>
        </action>
        
        <action name="pantallaEndosoDomicilio" class="EndososAction" method="pantallaEndosoDomicilio">
            <result name="success">/jsp-script/proceso/endosos/endosoDomicilio.jsp</result>
        </action>
        
        <action name="pantallaEndosoNombres" class="EndososAction" method="pantallaEndosoNombres">
            <interceptor-ref name="json">
                <param name="enableSMD">true</param>
                <param name="ignoreSMDMethodInterfaces">false</param>
            </interceptor-ref>
            <result name="success">/jsp-script/proceso/endosos/endosoNombres.jsp</result>
        </action>
        
        <action name="guardarEndosoNombres" class="EndososAction" method="guardarEndosoNombres">
            <interceptor-ref name="json">
                <param name="enableSMD">true</param>
                <param name="ignoreSMDMethodInterfaces">false</param>
            </interceptor-ref>
            <result name="success" type="json" />
        </action>
        
        <action name="guardarEndosoDomicilio" class="EndososAction" method="guardarEndosoDomicilio">
            <result name="success" type="json" />
        </action>
        
        <action name="obtenerCoberturasDisponibles" class="EndososAction" method="obtenerCoberturasDisponibles">
            <result name="success" type="json" />
        </action>
        
        <action name="guardarEndosoCoberturas" class="EndososAction" method="guardarEndosoCoberturas">
            <interceptor-ref name="json">
                <param name="enableSMD">true</param>
                <param name="ignoreSMDMethodInterfaces">false</param>
            </interceptor-ref>
            <result name="success" type="json" />
        </action>
        
        <action name="endosoValositBasico" class="EndososAction" method="endosoValositBasico">
            <result name="success">/jsp-script/proceso/endosos/endosoValositBasico.jsp</result>
        </action>
        
        <action name="guardarEndosoValositBasico" class="EndososAction" method="guardarEndosoValositBasico">
            <result name="success" type="json" />
        </action>
        
        <action name="visorPantallas" class="EndososAction" method="visorPantallas">
            <result name="success">/jsp-script/proceso/endosos/visorPantallas.jsp</result>
        </action>
        
        <action name="editorPantallas" class="EndososAction" method="editorPantallas">
            <result name="success">/jsp-script/proceso/endosos/editorPantallas.jsp</result>
        </action>
        
        <action name="obtenerParametrosPantalla" class="EndososAction" method="obtenerParametrosPantalla">
            <result name="success" type="json" />
        </action>
        
        <action name="guardarParametrosPantalla" class="EndososAction" method="guardarParametrosPantalla">
            <interceptor-ref name="json">
                <param name="enableSMD">true</param>
                <param name="ignoreSMDMethodInterfaces">false</param>
            </interceptor-ref>
            <result name="success" type="json" />
        </action>
        
        <action name="pantallaEndosoClausulas" class="EndososAction" method="pantallaEndosoClausulas">
            <result name="success">/jsp-script/proceso/endosos/pantallaEndosoClausulas.jsp</result>
        </action>
        
        <action name="guardarEndosoClausulaPaso" class="EndososAction" method="guardarEndosoClausulaPaso">
            <result name="success" type="json" />
        </action>
        
    </package>

</struts>