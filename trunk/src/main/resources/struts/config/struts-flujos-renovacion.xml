<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <include file="struts-default.xml" />
    
    <package name="flujorenovacion" extends="json-default" namespace="/flujorenovacion">

        <!-- Consulta de Polizas -->
        <action name="renovacionPolizas" class="renovacionAction" method="renovacionPolizas">
			<!--            
            <result name="input" >/jsp/flujos/renovacion/consultaPolizasRenovar.jsp</result> 
            --> 
            <result type="chain" name="consultaPolizaRenovar">consultaPolizasRenovar</result>  
        </action>
        <!-- Obtiene las Pólizas para llenar el grid -->
        <action name="obtienePolizas" class="renovacionAction"  method="obtienePolizas" >
            <result name="success" type="json" />
        </action>
        <!-- Obtiene combo de Aseguradora -->
        <action name="getComboAsegradora" class="renovacionAction"  method="getComboAsegradora" >
            <result name="success" type="json" />
        </action>
        <!-- Obtiene combo de tipo de Poliza -->
        <action name="getComboTiposPoliza" class="renovacionAction"  method="getComboTiposPoliza" >
            <result name="success" type="json" />
        </action>
        <!-- Obtiene combo de Producto -->
        <action name="getComboProducto" class="renovacionAction"  method="getComboProducto" >
            <result name="success" type="json" />
        </action>
        <!-- Obtiene combo de Cliente -->
        <action name="getComboCliente" class="renovacionAction"  method="getComboCliente" >
            <result name="success" type="json" />
        </action>
        <!-- Guarda las Pólizas Renovadas -->
        <action name="guardaRenovarPolizas" class="renovacionAction"  method="guardaRenovarPolizas" >
            <result name="success" type="json" />
        </action>
        <!-- Genera el borrador de Polizas -->
        <action name="borradorPolizas" class="renovacionAction"  method="borradorPolizas" >
            <result name="success" type="json" />
        </action>
        <!-- Renovar Pólizas -->
        <action name="renovarPolizas" class="renovacionAction"  method="renovarPolizas" >
            <result name="success" type="json" />
        </action>
        <!-- Consulta de Polizas Renovadas -->
        <action name="polizasRenovadas" class="renovacionAction" method="polizasRenovadas">
            <result name="input" >/jsp/flujos/renovacion/consultaPolizasRenovadas.jsp</result>     
        </action>
        <!-- Validación Poliza Endosos -->
        <action name="validacionPolizaEndososRenovacion" class="renovacionAction"  method="validacionPolizaEndososRenovacion" >
            <result name="success" type="json" />
        </action>
        <!-- Obtiene las Pólizas Renovadas para llenar el grid -->
        <action name="obtienePolizasRenovadas" class="renovacionAction"  method="obtienePolizasRenovadas" >
            <result name="success" type="json" />
        </action>
        <action name="aprobarPolizas" class="renovacionAction"  method="aprobarPolizas" >
            <result name="success" type="json" />
        </action>
        <action name="validaPoliza" class="renovacionAction"  method="validaPoliza" >
            <result name="success" type="json" />
        </action>

		<action name="exportarConsultaPolizaRenovar" class="renovacionAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action> 

    </package>


</struts>
        