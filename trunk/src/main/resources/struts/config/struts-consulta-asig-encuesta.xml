<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<include file="struts-default.xml" />
	
	<package name="consultarAsigEncuesta" extends="json-default" namespace="/consultarAsigEncuesta">

	<action name="buscarAsignacionEncuesta" class="listaConsultarAsigEncuestaAction" method="cmdBuscarClick">
    <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <!-- usado para insert y update -->
    <action name="guardarAsignacionEncuesta" class="consultarAsigEncuestaAction"  method="cmdGuardarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="borrarAsignacionEncuesta" class="consultarAsigEncuestaAction"  method="cmdBorrarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="exportarAsignacionEncuesta" class="listaConsultarAsigEncuestaAction" method="cmdExportarClick">
				<result name="success" type="stream">
				<param name="contentType">application/binary</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
	</action>       

	</package>

</struts>
