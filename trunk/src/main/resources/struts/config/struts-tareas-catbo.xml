<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="tareasCatBo" extends="json-default" namespace="/tareasCatBo">


    <action name="buscarTareasCatBo" class="listaTareasCatBoAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
	</action>
    
    <action name="borrarTareasCatBo" class="tareasCatBoAction" method="cmdBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="obtenerTareasCatBo" class="tareasCatBoAction" method="cmdGetClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="guardarTareasCatBo" class="tareasCatBoAction" method="cmdGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="exportarTareasCatBo" class="listaTareasCatBoAction" method="cmdExportarTareaCatBo">
        <result name="success" type="stream">
            <param name="contentType">${contentType}</param>
            <param name="inputName">inputStream</param>
            <param name="contentDisposition">filename="${filename}"</param>
            <param name="bufferSize">4096</param>
        </result>
    </action>  
    
 <action name="buscarTareasCatBoValidar" class="tareasCatBoAction" method="cmdBuscarClickValidar">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
	</action>
	</package>

</struts>
