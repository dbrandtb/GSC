<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">


<struts>
	<include file="struts-default.xml" />

	<package name="coberturas" extends="json-default" namespace="/coberturas">

		<!-- 
		Configuracion del Action con tipo de respuesta JSON, esto generara a partir
		de los atributos la respuesta en formato JSON para el Reader de ExtJs 
		-->
		
		<action name="PrincipalCoberturas" class="PrincipalCoberturasAction">
			<result name="input">/WEB-INF/jsp/productos/coberturas/principalCoberturas.jsp</result>
		</action>
		
		<action name="CargaCombosCoberturas" class="PrincipalCoberturasAction" method="cargaCombosCoberturas">
			<result name="input">/WEB-INF/jsp/productos/coberturas/principalCoberturas.jsp</result>
            <result name="success" type="json"/>                
		</action>
		
		<action name="AgregaCobertura" class="PrincipalCoberturasAction" method="agregaCobertura">
			<result name="input">/WEB-INF/jsp/productos/coberturas/principalCoberturas.jsp</result>
            <result name="success" type="json"/>                
		</action>
		
		<action name="AsociaCobertura" class="PrincipalCoberturasAction" method="asociaCobertura">
			<result name="input">/WEB-INF/jsp/productos/coberturas/principalCoberturas.jsp</result>
            <result name="success" type="json"/>                
		</action>
		
		<action name="CargaCoberturaAsociada" class="PrincipalCoberturasAction" method="cargaCoberturaAsociada">
			<result name="input">/WEB-INF/jsp/productos/coberturas/principalCoberturas.jsp</result>
            <result name="success" type="json"/>                
		</action>
	</package>

</struts>
