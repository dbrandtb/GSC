<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <include file="struts-default.xml" />

    <package name="menuusuario" extends="json-default" namespace="/menuusuario">

        <!--
        Redireccionamiento de action a jsp 
        -->
        <action name="menuUsuario" class="configMenuUsuario">
            <result name="success">/jsp/menuusuario/menuUsuario.jsp</result>
            <result name="input">/jsp/menuusuario/menuUsuario.jsp</result>
        </action>
        <!-- 
        Configuracion del Action con tipo de respuesta JSON, esto generara a partir
        de los atributos la respuesta en formato JSON para el Reader de ExtJs 
        -->
        <action name="menuUsuariosJson" class="configMenuUsuario" method="menuUsuariosJson">
            <result name="success" type="json" />
        </action> 
        <!--
        Configuracion del Action con tipo de respuesta JSON, esto generara a partir 
        de los atributos la respuesta en Formato JSON para el Reader de ExtJS y cargar el 
        combo de Clientes.
        -->
        <action name="clienteAction" class="configMenuUsuario" method="obtenComboCliente">
            <result name="success" type="json" />
        </action>
        <!--
        Configuracion del Action con tipo de respuesta JSON, esto generara a partir 
        de los atributos la respuesta en Formato JSON para el Reader de ExtJS y cargar el 
        combo de Usuarios.
        -->
        <action name="usuariosAction" class="configMenuUsuario" method="obtenComboUsuarios">
            <result name="success" type="json" />
        </action>
        <!--
        Configuracion del Action con tipo de respuesta JSON, esto generara a partir 
        de los atributos la respuesta en Formato JSON para el Reader de ExtJS y cargar el 
        combo de Productos.
         TODO: productoClienteAction no apunta a ningun metodo
        -->
        <action name="productoClienteAction" class="configMenuUsuario" method="obtenProductoCliente">
            <result name="success" type="json" />
        </action>
        <!--
        Configuracion del Action con tipo de respuesta JSON, esto generara a partir 
        de los atributos la respuesta en Formato JSON para el Reader de ExtJS y cargar el 
        combo de Roles.
        -->
        <action name="rolAction" class="configMenuUsuario" method="obtenComboRol">
            <result name="success" type="json" />
        </action>
    
        <!--
        Configuracion del Action con tipo de respuesta JSON, esto generara a partir 
        de los atributos la respuesta en Formato JSON para el Reader de ExtJs y carga el
        combo de Secciones.
        
        TODO: no apunta a ningun metodo
        -->
        <action name="seccionAction" class="configMenuUsuario" method="obtenComboSeccion">
            <result name="success" type="json" />
        </action> 
        <!--
        Configuracion del Action con tipo de respuesta JSON, esto generara, a partir 
        de los atributos la respuesta en Formato JSON para el reader de ExtJs y carga el 
        combo de tipos.
        -->
        <action name="tipoAction" class="configMenuUsuario" method="obtenComboTipo">
            <result name="success" type="json" />
        </action>
        
        <!--
        Configuracion del Action con tipo de respuesta JSON, esto generara, a partir 
        de los atributos la respuesta en Formato JSON para el reader de ExtJs y carga el 
        combo de tipos.
        -->
        <action name="tipoMenuAction" class="configMenuUsuario" method="obtenComboTipoMenu">
            <result name="success" type="json" />
        </action>
        
        <!--
        Configuracion del Action con tipo de respuesta JSON, esto generara, a partir 
        de los atributos la respuesta en Formato JSON para el reader de ExtJs y carga el 
        combo de tipos.
        -->
        <action name="estadoAction" class="configMenuUsuario" method="obtenComboEstado">
            <result name="success" type="json" />
        </action>
        <!--
        Configuracion del Action con tipo de Respuesta Json para insertar una nueva 
        configuracion de la pagina principal.
        -->
        <action name="guardarAction" class="configMenuUsuario" method="addMenu">
            <result name="success" type="json"/>
            <result name="input">/jsp/menuusuario/menuUsuario.jsp</result>
        </action>
        <!--
        Configuracion del Action con tipo de Respuesta Json para editar una 
        configuracion de la pagina principal de Configuracion de Pagina principal. 
         -->
        <action name="editarAction" class="configMenuUsuario" method="editarMenu">
            <result name="success" type="json"/>
            <result name="input">/jsp/menuusuario/menuUsuario.jsp</result>
        </action>
        <!--
        Configuracion del Action con tipo de Respuesta Json para copiar una 
        configuracion de la pagina principal de Configuracion de Pagina principal. 
         -->
        <action name="copiarAction" class="menuUsuario" method="copiarMenu">
            <result name="success" type="json"/>
            <result name="input">/jsp/menuusuario/menuUsuario.jsp</result>
        </action>
        <!--
        Configuracion del Action con tipo de Respuesta Json para borrar una
        configuracion de la pagina principal de Configuracion de Pagina Principal 
         -->
         <action name="borrarMenuAction" class="menuUsuario" method="borrarMenu">
            <result name="success" type="json"/>
            <result name="input">/jsp/menuusuario/menuUsuario.jsp</result>
         </action>
        <!--  
        Configuración del Action para la exportación del documentos, se tiene que
        declarar como tipo de respuesta "stream" y el tipo mime de retorno, asi como
        el atributo asociado al flujo de datos con el archivo y el nombre del archivo
        generado, junto con el tamaño del buffer de transferencia
        --> 
        <action name="exportMenuUsuario" class="exportMenuUsuarioAction">
            <result name="success" type="stream">
                <param name="contentType">${contentType}</param>
                <param name="inputName">inputStream</param>
                <param name="contentDisposition">filename="${filename}"</param>
                <param name="bufferSize">8000</param>
            </result>
        </action>
        
        <!--
        Configuracion del Action con tipo de respuesta JSON, esto generara a partir 
        de los atributos la respuesta en Formato JSON para el Reader de ExtJS y cargar el 
        combo de Usuarios por nivel y rol.
        -->
        <action name="usuariosNivelRolAction" class="configMenuUsuario" method="obtenComboUsuariosNivelRol">
            <result name="success" type="json" />
        </action>
        
        
    </package>

</struts>