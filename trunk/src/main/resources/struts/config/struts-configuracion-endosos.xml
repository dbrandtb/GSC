<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <include file="struts-default.xml" />                           

    <package name="configuracionEndosos" extends="json-default" namespace="/configuracionEndosos">
		
		<action name="obtenerTiposEndosos" class="listaConfiguracionEndososAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="exportarTiposEndosos" class="listaConfiguracionEndososAction" method="cmdExportarClick">
			<result name="success" type="stream">
				 <param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>  
		
		<action name="borrarTipoEndoso" class="configuracionEndososAction" method="cmdBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="guardarTipoEndoso" class="configuracionEndososAction" method="cmdGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<!--action name="backToSomewhere" class="" method="backToSomewhereClick">
            <result type="chain" name=""></result>
		</action-->
    	
    </package>

</struts>
