<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="debug" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} [%3.3t] %5.5p %18C{1} %X - %m%n" />
        </layout>
    </appender>
    <appender name="aon" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="./AON_DEBUG.log" />
        <param name="Threshold" value="debug" />
        <param name="append" value="false" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} [%3.3t] %5.5p %18C{1} %X - %m%n" />
        </layout>
    </appender>
   <appender name="sql" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="./AON_SQL.log" />
        <param name="Threshold" value="info" />
        <param name="append" value="false" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} [%3.3t] %5.5p %C %X - %m%n" />
        </layout>
    </appender>
   <appender name="apache" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="./AON_APACHE.log" />
        <param name="Threshold" value="info" />
        <param name="append" value="false" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} [%3.3t] %5.5p %C %X - %m%n" />
        </layout>
    </appender>
    
    <logger name="mx">
        <level value="debug,info,warn,error,fatal" />
        <appender-ref ref="aon" />
		<appender-ref ref="stdout" /> 
    </logger>
    <logger name="com.wittyconsulting">
        <level value="debug,info,warn,error,fatal" />
        <appender-ref ref="aon" />
		<appender-ref ref="stdout" /> 
    </logger>
    <logger name="org.springframework">
        <level value="info,warn,error,fatal" />
        <appender-ref ref="aon" />
		<appender-ref ref="stdout" /> 
    </logger>
    <logger name="org.aspectj.weaver">
        <level value="info,warn,error,fatal" />
        <appender-ref ref="aon" />
		<appender-ref ref="stdout" /> 
    </logger>
    <logger name="java.sql">
        <level value="debug,info,warn,error,fatal" />
        <appender-ref ref="sql" />
    </logger>
    <logger name="org.apache">
        <level value="info,error,fatal" />
        <appender-ref ref="apache" />
    </logger>
</log4j:configuration>
