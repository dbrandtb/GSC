<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <include file="struts-default.xml" />
    
    <package name="procesoemision" extends="json-default" namespace="/procesoemision">
        
        <action name="busquedaPoliza" class="ConsultasPolizaAction">
            <result name="success">/jsp/consultas/consultasPolizas.jsp</result>
        </action>
       
    </package>
    
    <package name="emision" extends="json-default" namespace="/emision">
        
        <action name="cotizacion" class="CotizacionAction" method="pantallaCotizacion">
            <result name="success">/jsp-script/proceso/emision/cotizacion.jsp</result>
        </action>
        
        <action name="cotizar" class="CotizacionAction" method="cotizar">
            <interceptor-ref name="json">
                <param name="enableSMD">true</param>
                <param name="ignoreSMDMethodInterfaces">false</param>
            </interceptor-ref>
            <result name="success" type="json" />
        </action>
       
    </package>
    
</struts>