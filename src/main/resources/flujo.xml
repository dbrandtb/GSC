<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow PUBLIC "-//OpenSymphony Group//DTD OSWorkflow 2.8//EN" "http://www.opensymphony.com/osworkflow/workflow_2_8.dtd">
  <workflow>
    <initial-actions>
      <action id="100" name="Start Workflow">
        <results>
          <unconditional-result old-status="Finished" status="Underway" step="1"/>
        </results>
      </action>
    </initial-actions>
    <steps>
      <step id="1" name="Employee request">
        <actions>
          <action id="1" name="Requested">
            <results>
              <unconditional-result old-status="Finished" status="Requested" step="2"/>
            </results>
          </action>
        </actions>
      </step>
      <step id="2" name="Manager revision">
        <actions>
          <action id="2" name="Approved" finish="true">
            <results>
              <unconditional-result old-status="Revised" status="ApprovedStatus" step="0"/>
            </results>
          </action>
          <action id="3" name="Denied" finish="true">
            <results>
              <unconditional-result old-status="Revised" status="DeniedStatus" step="0"/>
            </results>
          </action>
        </actions>
      </step>
    </steps>
  </workflow>
