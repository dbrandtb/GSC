<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="login" extends="json-default" namespace="/login">


    <!--
    Configuracion del Action con tipo de respuesta JSON, esto generara a partir
    de los atributos la respuesta en formato JSON para el Reader de ExtJs
    -->
    <action name="login" class="loginActionBO" method="cmdLogin">
    	<exception-mapping result="loginException" exception="javax.servlet.ServletException">doLogin</exception-mapping>
    	<exception-mapping result="loginException" exception="java.sql.SQLException">doLogin</exception-mapping>
    	<exception-mapping result="loginException" exception="java.lang.Exception">doLogin</exception-mapping>
    	<result type="chain" name="loginRefused">doLogin</result>
    	<result type="chain" name="loginAccepted"><param name="actionName">load</param><param name="namespace">/</param></result>
    	<result type="chain" name="loginException">doLogin</result>
    </action>

	</package>

</struts>
