<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="formatosDocumentos" extends="json-default" namespace="/formatosDocumentos">


    <action name="buscarFormatosDocumentos" class="listaFormatosDocumentosAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
	</action>
    
    <action name="borrarFormatosDocumentos" class="formatosDocumentosAction" method="cmdBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="getFormatosDocumentos" class="formatosDocumentosAction" method="cmdGetClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="guardarFormatosDocumentos" class="formatosDocumentosAction" method="cmdGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="exportarFormatosDocumentos" class="listaFormatosDocumentosAction" method="cmdExportarFrmDocClick">
        <result name="success" type="stream">
            <param name="contentType">${contentType}</param>
            <param name="inputName">inputStream</param>
            <param name="contentDisposition">filename="${filename}"</param>
            <param name="bufferSize">4096</param>
        </result>
    </action>  
    

	</package>

</struts>
