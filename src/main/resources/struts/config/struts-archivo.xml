<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<include file="struts-default.xml" />

	<package name="archivo" extends="json-default" namespace="/archivos">

	    <action name="obtenerArchivos" class="archivoAction" method="cmdClickBuscarArchivos">
	            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		<action name="agregarArchivos" class="archivoAction" method="cmdGuardaArchivos">
		    <result name="success">/resources/jsp-script/configurador/pantallas/jsonResponseFileTree.jsp</result>
	            <!--result type="json"><param name="ignoreHierarchy">false</param></result-->
		</action>

		<action name="borrarArchivosMovimiento" class="archivoAction" method="cmdBorrarClick">
          <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		
		<action name="agregarArchivosJSON" class="archivoAction" method="cmdGuardaArchivos">
		    <!--result name="success">/resources/jsp-script/configurador/pantallas/jsonResponseFileTree.jsp</result-->
	            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
	    
	    <action name="descargarArchivo" class="archivoAction" method="cmdDescargarArchivo">
        <result name="success" type="stream">
             <param name="contentType">${contentType}</param>
            <param name="inputName">inputStream</param>
            <param name="contentDisposition">attachment; filename="${filename}"</param>
            <param name="bufferSize">4096</param>
        </result>
        <result name="input" type="stream">
             <param name="contentType">${contentType}</param>
            <param name="inputName">inputStream</param>
            <param name="contentDisposition">attachment; filename="${filename}"</param>
            <param name="bufferSize">4096</param>
        </result>
    </action> 
	    
	</package>

</struts>
