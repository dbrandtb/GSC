<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="periodosGraciaCliente" extends="json-default" namespace="/periodosGraciaCliente">


    <action name="buscarPeriodosGraciaCliente" class="listaPeriodosGraciaClienteAction" method="cmdBuscarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    
    <action name="insertarPeriodosGraciaCliente" class="periodosGraciaClienteAction"  method="cmdAgregarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
   
    
    <action name="borrarPeriodosGraciaCliente" class="periodosGraciaClienteAction"  method="cmdBorrarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="exportarPeriodosGraciaCliente" class="listaPeriodosGraciaClienteAction" method="cmdExportarClick">
				<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
	</action>       
	
 
	</package>

</struts>
