<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <include file="struts-default.xml" />                           

    <package name="asociarFormatos" extends="json-default" namespace="/asociarFormatos">
    
    	<action name="buscarAsociarFormatos" class="listaAsociarFormatosAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>
        
        <action name="exportarAsociarFormatos" class="listaAsociarFormatosAction" method="cmdExportarAsociarFormatosClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>  
		
		<action name="borrarAsociarFormatos" class="asociarFormatosAction" method="cmdBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		       
       <action name="obtenerFormatoxCuenta" class="asociarOrdenTrabajoAction" method="obtenerFormatosxCuentaClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>
        
        <action name="guardarAsociarOrdenTrabajo" class="asociarOrdenTrabajoAction" method="cmdAgregarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>
        
        <action name="irAsociarFormatos" class="asociarOrdenTrabajoAction" method="cmdRegresarClick">
            <result type="chain" name="asociarFormatos">asociarFormatos</result>
        </action>  

    </package>

</struts>