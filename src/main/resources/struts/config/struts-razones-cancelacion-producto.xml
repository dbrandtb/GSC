<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <include file="struts-default.xml" />                           

    <package name="razonesCancelacionProducto" extends="json-default" namespace="/razonesCancelacionProducto">
		
		<action name="obtenerRazonesCancelacionProducto" class="listaRazonesCancelacionProductoAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<!--action name="validarBorrarRazonCancelacionProducto" class="razonesCancelacionProductoAction" method="cmdValidarBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action-->
		
		<action name="exportarRazonesCancelacionProducto" class="listaRazonesCancelacionProductoAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>  
		
		<action name="borrarRazonCancelacionProducto" class="razonesCancelacionProductoAction" method="cmdBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="guardarRazonCancelacionProducto" class="razonesCancelacionProductoConfigurarAction" method="cmdGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="irAgregarRazonCancelacionProducto" class="razonesCancelacionProductoAction" method="irAgregarRazonCancelacionProductoClick">
            <result type="chain" name="agregarRazonCancelacionProducto">razonCancelacionProductoConfigurar</result>
		</action>
		
		<action name="irRazonesCancelacionProducto" class="razonesCancelacionProductoConfigurarAction" method="irRazonesCancelacionProductoClick">
            <result type="chain" name="razonesCancelacion">razonesCancelacionProducto</result>
		</action>
    	
    </package>

</struts>

