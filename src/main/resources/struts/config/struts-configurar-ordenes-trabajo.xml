<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <include file="struts-default.xml" />                           

    <package name="configurarOrdenesTrabajo" extends="json-default" namespace="/configurarOrdenesTrabajo">
		
		<action name="obtenerSeccionesFormato" class="configurarSeccionOrdenAction" method="obtenerSeccionesFormato">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="guardarSeccionFormato" class="configurarSeccionOrdenAction" method="guardarSeccionFormatoClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="irFormatoOrdenesTrabajo" class="configurarSeccionOrdenAction" method="irFormatoOrdenesTrabajoClick">
            <result type="chain" name="formatoOrdenesTrabajo">formatoOrdenesTrabajo</result>
		</action>
		
		<action name="borrarSeccionFormato" class="configurarSeccionOrdenAction" method="borrarSeccionFormatoClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>		
		
		<action name="irValoresxDefecto" class="configurarSeccionOrdenAction" method="irValoresxDefectoClick">
            <result type="chain" name="valoresDefectoAtributos">valoresDefectoAtributos</result>
		</action>
		
		<action name="obtenerValoresDefectoAtributos" class="valoresDefectoAtributosAction" method="obtenerValoresDefectoAtributos">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>

		<action name="guardarValorDefectoAtributos" class="valoresDefectoAtributosAction" method="guardarValorDefectoAtributosClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="irConfigurarOrdenesTrabajo" class="valoresDefectoAtributosAction" method="irConfigurarOrdenesTrabajoClick">
            <result type="chain" name="configurarSeccionesOrdenesTrabajo">configurarOrdenesTrabajo</result>
		</action>
		
		<!-- Conf Formato -->
		<action name="obtenerAtributosFormatoOrdenTrabajo" class="configuracionAtributosFormatosOrdenTrabajoAction" method="obtenerAtributosFormatoOrdenTrabajo">
        	<result type="json"><param name="ignoreHierarchy">false</param></result>
	    </action>
	
	    <!-- usado para insert y update -->
	    <action name="insertarGuardarAtributosFormatoOrdenTrabajo" class="configuracionAtributosFormatosOrdenTrabajoAction"  method="insertarGuardarAtributosFormatoOrdenTrabajo">
	        <result type="json"><param name="ignoreHierarchy">false</param></result>
	    </action>
	    
	    <action name="borrarAtributosFormatoOrdenTrabajo" class="configuracionAtributosFormatosOrdenTrabajoAction"  method="borrarAtributosFormatoOrdenTrabajo">
	        <result type="json"><param name="ignoreHierarchy">false</param></result>
	    </action>
		
    </package>

</struts>

