<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="desglosePolizas" extends="json-default" namespace="/desglosePolizas">


    <action name="buscarDesglosePolizas" class="listaDesglosePolizasAction" method="cmdBuscarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <!-- usado para insert y update -->
    <action name="guardarDesglosePolizas" class="desglosePolizasAction"  method="cmdAgregarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="borrarDesglosePolizas" class="desglosePolizasAction"  method="cmdBorrarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="exportarBusquedaDesglosePolizas" class="listaDesglosePolizasAction" method="cmdExportarClick">
				<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
	</action>       
	
 
    <action name="getDesglosePolizas" class="desglosePolizasAction"  method="cmdGetClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="copiarDesglosePolizas" class="desglosePolizasAction"  method="cmdCopiarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
	
	</package>

</struts>
