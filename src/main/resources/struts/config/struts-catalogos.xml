<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<include file="struts-default.xml" />

	<package name="catalogos" extends="json-default"
		namespace="/catalogos">

        <action name="clausulas" class="ConsultasPolizaAction" method="entraClausulas">
          <result name="success">/jsp/consultas/consultaClausulas.jsp</result>
        </action>

        <action name="cargaClausulas" class="ConsultasPolizaAction" method="cargaClausulas">
            <result type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">
                    listaGenerica.*,
                    success
                </param>
            </result>
        </action>

        <action name="consultaClausulas" class="ConsultasPolizaAction" method="consultaClausulas">
            <result type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">
                    listaGenerica.*,
                    success
                </param>
            </result>
        </action>

        <action name="insertaClausula" class="ConsultasPolizaAction" method="insertaClausula">
            <result type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">
                    success
                </param>
            </result>
        </action>
        <action name="consultaClausulaDetalle" class="ConsultasPolizaAction" method="consultaClausulaDetalle">
            <result type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">
                    msgResult.*,
                    success
                </param>
            </result>
        </action>
        <action name="actualizaClausula" class="ConsultasPolizaAction" method="actualizaClausula">
            <result type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">
                    success
                </param>
            </result>
        </action>

	</package>

</struts>
