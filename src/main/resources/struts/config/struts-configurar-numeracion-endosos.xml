<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <include file="struts-default.xml" />                           

    <package name="configurarNumeracionEndosos" extends="json-default" namespace="/configurarNumeracionEndosos">
		
		<action name="obtenerNumeracionEndosos" class="listaConfiguracionNumeracionEndososAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="getNumeracionEndosos" class="configuracionNumeracionEndososAction" method="cmdGetClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="guardarNumeracionEndoso" class="configuracionNumeracionEndososAction" method="cmdGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="borrarNumeracionEndoso" class="configuracionNumeracionEndososAction" method="cmdBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="exportarNumeracionEndosos" class="listaConfiguracionNumeracionEndososAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>
		
		<!--action name="backToSomewhere" class="" method="backToSomewhereClick">
            <result type="chain" name=""></result>
		</action-->
    	
    </package>

</struts>
