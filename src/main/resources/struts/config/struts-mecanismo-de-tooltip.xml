<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <include file="struts-default.xml" />                           

    <package name="mecanismoDeTooltip" extends="json-default" namespace="/mecanismoDeTooltip">
    
		<action name="buscarMecanismoDeTooltip" class="listaMecanismoDeTooltipAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>

    	<action name="agregarGuardarMecanismoDeTooltip" class="mecanismoDeTooltipAction" method="cmdGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

	    <action name="borrarMecanismoDeTooltip" class="mecanismoDeTooltipAction" method="cmdBorrarClick">
           <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

        <action name="getMecanismoDeTooltipVO" class="mecanismoDeTooltipAction" method="cmdGetClick" >
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

        <action name="copiarMecanismoDeTooltipVO" class="mecanismoDeTooltipAction" method="cmdCopiarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>
		
		<action name="exportarMecanismoDeTooltip" class="listaMecanismoDeTooltipAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>        
			
    </package>

</struts>