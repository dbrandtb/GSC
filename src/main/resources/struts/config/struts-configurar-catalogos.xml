<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<include file="struts-default.xml" />

	<package name="configurarCatalogos" extends="json-default" namespace="/configurarCatalogos">
	
		<action name="configurardorCatalogoSimple" class="configurarCatalogosSimplesAction" method="cmdConfigurarCatalogoSimple">
    	<exception-mapping result="configurarCatalogoSimple" exception="javax.servlet.ServletException">configurarCatalogoSimple</exception-mapping>
    	<exception-mapping result="configurarCatalogoSimple" exception="java.sql.SQLException">configurarCatalogoSimple</exception-mapping>
    	<exception-mapping result="configurarCatalogoSimple" exception="java.lang.Exception">configurarCatalogoSimple</exception-mapping>
            <result type="chain" name="configurarCatalogoSimple">configurarCatalogoSimple</result>
		</action>
		
		<action name="obtenerDatosGrilla" class="configurarCatalogosSimplesAction" method="cmdBuscarDatosGrilla" >
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

		<action name="guardarRegistro" class="configurarCatalogosSimplesAction" method="cmdGuardarDatos" >
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

		<action name="actualizarRegistro" class="configurarCatalogosSimplesAction" method="cmdActualizarDatos" >
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

		<action name="borrarRegistro" class="configurarCatalogosSimplesAction" method="cmdBorrar">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>		        

        <action name="exportarCatalogosSimples" class="configurarCatalogosSimplesAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>  	        
		
        
    </package>
    

</struts>
