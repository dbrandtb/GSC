<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<include file="struts-default.xml" />

	<package name="cargaArchivos" extends="json-default" namespace="/cargaArchivos">

	    <action name="obtenerArchivos" class="cargaArchivosAction" method="cmdClickBuscarArchivos">
	            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		<action name="agregarArchivos" class="cargaArchivosAction" method="cmdGuardaArchivos">
		    <result name="success">/resources/jsp-script/configurador/pantallas/jsonResponseFileTree.jsp</result>
	            <!--result type="json"><param name="ignoreHierarchy">false</param></result-->
		</action>
		
		<action name="downloadArchivos" class="cargaArchivosAction" method="cmdClickBajarArchivo">
		      <result name="success" type="stream"/>
	    </action>
		
		<action name="agregarArchivosJSON" class="cargaArchivosAction" method="cmdGuardaArchivos">
		    <!--result name="success">/resources/jsp-script/configurador/pantallas/jsonResponseFileTree.jsp</result-->
	            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
			
	</package>

</struts>
