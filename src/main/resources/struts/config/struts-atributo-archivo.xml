<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<include file="struts-default.xml" />

	<package name="atributosArchivos" extends="json-default" namespace="/atributosArchivos">

	    <action name="buscarAtributoArchivo" class="atributosArchivoAction" method="cmdBuscarAtributosArchivos">
	            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>

	    <action name="agregarAtributoArchivo" class="atributosArchivoAction" method="cmdAgregarAtributoArchivo">
	            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>

	 <action name="borrarAtributoArchivo" class="atributosArchivoAction" method="cmdBorrarAtributosArchivos">
	            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action> 

	    <action name="editarAtributoArchivo" class="atributosArchivoAction" method="cmdEditarAtributosArchivos">
	            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>

       <action name="exportarAtributoArchivo" class="atributosArchivoAction" method="cmdExportararchivo">
        <result name="success" type="stream">
             <param name="contentType">${contentType}</param>
            <param name="inputName">inputStream</param>
            <param name="contentDisposition">filename="${filename}"</param>
            <param name="bufferSize">4096</param>
        </result>
    </action>  
  
      		

	</package>

</struts>
