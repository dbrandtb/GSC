<struts>
    <include file="struts-default.xml" />
    
    <package name="mesacontrol" extends="json-default" namespace="/mesacontrol">
        <action name="principal" class="MesaControlAction" method="principal">
            <result name="success">/jsp/extjs4/mesacontrol/principal.jsp</result>
        </action>
        <action name="loadTareas" method="loadTareas" class="MesaControlAction">
            <result name="success" type="json" />
        </action>
        <action name="obtenerValoresDefectoInsercionManual" method="obtenerValoresDefectoInsercionManual" class="MesaControlAction">
            <result name="success" type="json" />
        </action>
    </package>

