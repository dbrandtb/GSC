<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="detallePlanes" extends="json-default" namespace="/detallePlanes">


    <!--
    Configuracion del Action con tipo de respuesta JSON, esto generara a partir
    de los atributos la respuesta en formato JSON para el Reader de ExtJs
    -->
    <action name="listarDetallePlanes" class="listaMantenimientoPlanesAction" method="cmdListarMantenimientoPlanes">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>


    <action name="getDetallePlan" class="mantenimientoPlanAction"  method="cmdGetClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>


    <action name="agregarNuevoDetallePlan" class="mantenimientoPlanAction"  method="cmdInsertarPlan">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="editarDetallePlan" class="mantenimientoPlanAction"  method="cmdActualizarPlan">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>


    <action name="borrarDetallePlan" class="mantenimientoPlanAction"  method="cmdBorrarPlan">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="exportarBusquedaPlanes" class="listaMantenimientoPlanesAction" method="cmdExportacionClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
	</action>      
		
   <action name="irBuscarPlanes" class="listaMantenimientoPlanesAction" method="irBuscarPlanes">
        <result type="chain" name="listarDetallePlanes">detallePlanes</result>
    </action>
