<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="numeroPolizas" extends="json-default" namespace="/numeroPolizas">


    <action name="buscarNumeroPolizas" class="listaNumeroPolizasAction" method="cmdBuscarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    
    <action name="insertarNumeroPolizas" class="numeroPolizasAction"  method="cmdAgregarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="guardarNumeroPolizas" class="numeroPolizasAction"  method="cmdGuardarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="borrarNumeroPolizas" class="numeroPolizasAction"  method="cmdBorrarClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="borrarNumeroPolizasEmision" class="numeroPolizasAction"  method="cmdBorrarNumPolEmision">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="exportarNumeroPolizas" class="listaNumeroPolizasAction" method="cmdExportarClick">
				<result name="success" type="stream">
				 <param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
	</action>       
	
 
    <action name="getNumeroPoliza" class="numeroPolizasAction"  method="cmdGetClick">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="irPolizasMaestras" class="numeroPolizasAction"  method="cmdIrPolizasMaestras">
        <result type="chain" name="consultaPolizasMaestras">
          <param name="actionName">consultaPolizasMaestras</param>
          <param name="namespace">/procesoemision</param>
        </result>
    </action>
    
	</package>

</struts>
