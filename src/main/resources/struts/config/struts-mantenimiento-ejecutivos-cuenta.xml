<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <include file="struts-default.xml" />                           

    <package name="mantenimientoEjecutivosCuenta" extends="json-default" namespace="/mantenimientoEjecutivosCuenta">
    
    	<action name="buscarEjecutivos" class="listaMantenimientoEjecutivosCuentaAction" method="cmdBuscarEjecutivos">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

    	<action name="obtenerEjecutivo" class="mantenimientoEjecutivosCuentaAction" method="cmdObtenerEjecutivo">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

    	<action name="guardarEjecutivo" class="mantenimientoEjecutivosCuentaAction" method="cmdGuardarEjecutivo">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

    	<action name="borrarEjecutivo" class="mantenimientoEjecutivosCuentaAction" method="cmdBorrarEjecutivo">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

    	<action name="obtenerAtributosEjecutivo" class="listaMantenimientoEjecutivosCuentaAction" method="cmdObtenerAtributos">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

    	<action name="irMantenimientoAtributosEjecutivo" class="listaMantenimientoEjecutivosCuentaAction" method="cmdIrMantenimientoAtributos">
            <result type="chain" name="irMantenimientoAtributosEjecutivo">mantenimientoAtributosEjecutivoCuenta</result>
        </action>

    	<action name="guardarAtributos" class="mantenimientoEjecutivosCuentaAction" method="cmdGuardarAtributo">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

		<action name="exportarEjecutivos" class="listaMantenimientoEjecutivosCuentaAction" method="cmdExportarEjecutivosClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>  

		<action name="exportarAtributosEjecutivos" class="listaMantenimientoEjecutivosCuentaAction" method="cmdExportarAtributosEjecutivosClick">
			<result name="success" type="stream">
				    <param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>  

    </package>

</struts>