<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <include file="struts-default.xml" />                           

    <package name="motivosCancelacion" extends="json-default" namespace="/motivosCancelacion">
		
		<action name="buscarMotivosCancelacion" class="listaMotivosCancelacionAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="buscarMotivosCancelacionRequisitos" class="listaMotivosCancelacionAction" method="getBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
	    <action name="exportarMotivosCancelacion" class="listaMotivosCancelacionAction" method="cmdExportarMotivosCancelacionClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>  
	    
	    <action name="borrarMotivosCancelacion" class="motivosCancelacionAction" method="cmdBorrarClickMc">
	        <result type="json"><param name="ignoreHierarchy">false</param></result>
	    </action>
	   
	   <action name="borrarMotivosCancelacionRequisitos" class="motivosCancelacionAction" method="cmdBorrarClickRc">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="agregarMotivosCancelacion" class="motivosCancelacionAction" method="cmdGuardarNuevoClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
	    <action name="guardarMotivosCancelacion" class="motivosCancelacionAction" method="cmdGuardarClick">
	        <result type="json"><param name="ignoreHierarchy">false</param></result>
	    </action>
	    
	    <action name="obtenerMotivosCancelacion" class="motivosCancelacionAction" method="cmdGetClickMotivoCancelacion">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="irConfigurarMotivosCancelacion" class="motivosCancelacionAction" method="cmdIrConfigurarMotivosCancelacion">
	    	<result type="chain" name="codigoRazon">configurarMotivosCancelacion</result>
	  	</action>

	    <action name="regresarMotivosCancelacion" class="motivosCancelacionAction" method="cmdRegresarMotivosCancelacion">
	    	<result type="chain" name="motivosCancelacion">motivosCancelacion</result>
	    </action>
    
    </package>

</struts>
