<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <include file="struts-default.xml" />                           

    <package name="rangosRenovacion" extends="json-default" namespace="/rangosRenovacion">
    
    	<action name="getRangoRenovacion" class="rangosRenovacionAction" method="cmdGetRangoRenovacion">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>
        
        <action name="getEncabezadoRangoRenovacion" class="rangosRenovacionAction" method="cmdGetEncabezadoRangoRenovacion">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>
		
		<action name="buscarRangosRenovacion" class="listaRangosRenovacionAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="exportarRangosRenovacion" class="listaRangosRenovacionAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>        
			
	    <action name="agregarGuardarRangosRenovacion" class="rangosRenovacionAction" method="cmdAgregarGuardarClick">
           <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

      

        <action name="borrarRangoRenovacion" class="rangosRenovacionAction" method="cmdBorrarClick" >
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

        <action name="irConfiguracionRenovacion" class="listaRangosRenovacionAction" method="cmdRegresarConfiguracionRenovacion">
				<result type="chain" name="consultaConfiguracionRenovacion">consultaConfiguracionRenovacion</result>
		</action>
     
    </package>

</struts>