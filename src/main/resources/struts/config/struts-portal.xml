<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <include file="struts-default.xml" />

    <package name="portal" extends="json-default" namespace="/portal">

		<action name="validateUser" class="loginAction">
			<result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>

		<action name="loadNav" class="loadNavAction">
			<result>/jsp/portal/navegacion.jsp</result>
		</action>

		<action name="logoff" class="mx.com.aon.portal.web.LoginAction" method="logOff">
			<result>/jsp/portal/index.jsp</result>
		</action>

     	
	    
	</package>

</struts>
