<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="administrarCatalogSistemaExterno" extends="json-default" namespace="/administrarCatalogSistemaExterno">


    <action name="buscarDatosCataex" class="listaAdministraCatalogSistemExternoAction" method="buscar">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
	</action>

   <action name="guardarDatosTcataex" class="administraCatalogSistemExternoAction" method="guardar">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
      <action name="borraRegTcataex" class="administraCatalogSistemExternoAction" method="cmdBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>
    
    <action name="regresar" class="administraCatalogSistemExternoAction" method="regresar">
      <result type="chain" name="administrarEquivalenciaCatalogos">administrarEquivalenciaCatalogos</result>
    </action>
    	
    	<action name="exportarTcataex" class="listaAdministraCatalogSistemExternoAction" method="cmdExportarClick">
				<result name="success" type="stream">
				   <param name="contentType">${contentType}</param>
		    <!-- <param name="contentType">application/binary</param> -->				   
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
	</action>   

	</package>

</struts>
