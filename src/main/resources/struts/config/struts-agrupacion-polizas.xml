<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


    <include file="struts-default.xml" />                           

    <package name="agrupacionPolizas" extends="json-default" namespace="/agrupacionPolizas">

		<!--
		Configuracion del Action con tipo de respuesta JSON, esto generara a partir
		de los atributos la respuesta en formato JSON para el Reader de ExtJs
		-->
		<action name="buscarAgrupaciones" class="listaAgrupacionPolizasAction" method="cmdBuscarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>
		
		<action name="getAgrupacion" class="agrupacionPolizasAction" method="cmdGetClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
		</action>

	    <action name="guardarNuevaAgrupacion" class="agrupacionPolizasAction" method="cmdAgregarClick">
	        <result type="json"><param name="ignoreHierarchy">false</param></result>
	    </action>

        <action name="guardarAgrupacion" class="agrupacionPolizasAction" method="cmdGuardarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

        <action name="borrarAgrupacion" class="agrupacionPolizasAction" method="cmdBorrarClick">
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

        <action name="irConfigurarAgrupacion" class="agrupacionPolizasAction" method="cmdIrConfigurarAgrupacion">
            <result type="chain" name="agrupacionGrupoPersonas">agrupacionGrupoPersonas</result>
            <result type="chain" name="agrupacionPapel">
            	<param name="actionName">irEditarAgrupacionPapel</param>
            	<param name="namespace">/agrupacionPapel</param>
            </result>
            <result type="json"><param name="ignoreHierarchy">false</param></result>
        </action>

        <action name="exportarAgrupacion" class="listaAgrupacionPolizasAction" method="cmdExportarClick">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">filename="${filename}"</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>        


    </package>

</struts>
