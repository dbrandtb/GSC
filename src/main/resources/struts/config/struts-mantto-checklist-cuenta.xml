<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<include file="struts-default.xml" />

	<package name="checkListCuenta" extends="json-default" namespace="/checkListCuenta">


    <!--
    Configuracion del Action con tipo de respuesta JSON, esto generara a partir
    de los atributos la respuesta en formato JSON para el Reader de ExtJs
    -->
    <action name="chkListObtenerSecciones" class="checkListCuentaPreRequisitosAction" method="cmdObtenerSecciones">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="chkListObtenerEncabezados" class="checkListCuentaPreRequisitosAction" method="obtenerEncabezados">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="chkListObtenerTareas" class="checkListCuentaPreRequisitosAction" method="obtenerTareasSeccion">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="chkListGuardarTarea" class="checkListCuentaPreRequisitosAction" method="guardaTareasSeccion">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="chkListIsConfiguracionCompleta" class="checkListCuentaPreRequisitosAction" method="guardaTareasSeccion">
        <result type="json"><param name="ignoreHierarchy">false</param></result>
    </action>

    <action name="irEditarCheckListCuenta" class="checkListCuentaPreRequisitosAction" method="cmdIrEditarConfiguraCuentaClick">
    	<result type="chain" name="editarConfiguraCuenta">checkListCuenta</result>
    </action>

    <action name="irAgregarCheckListCuenta" class="checkListCuentaPreRequisitosAction" method="cmdIrAgregarConfiguraCuentaClick">
    	<result type="chain" name="agregarConfiguraCuenta">checkListCuenta</result>
    </action>
    
    <action name="irCheckListConfiguraCuenta" class="checkListCuentaPreRequisitosAction" method="regresarCheckListConfigCuentaClick">
    	<result type="chain" name="irACheckListConfiguraCuenta">checkListConfiguraCuenta</result>
    </action>

	</package>

</struts>
