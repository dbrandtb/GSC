<?xml version="1.0"?>

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="TRACE" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} [%6.6t] %5.5p %18C{1} %X - %m%n" />
		</layout>
	</appender>
	
	<appender name="app" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/u01/wlserver/wllogs/gseguros/application.log" />
		<param name="Threshold" value="TRACE" />
		<param name="append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} [%6.6t] %5.5p %18C{1} %X - %m%n" />
		</layout>
	</appender>
	
	<appender name="sql" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/u01/wlserver/wllogs/gseguros/sql.log" />
		<param name="Threshold" value="ERROR" />
		<param name="append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} [%6.6t] %5.5p %C %X - %m%n" />
		</layout>
	</appender>

	<logger name="mx">
		<level value="DEBUG" />
		<appender-ref ref="app" />
		<appender-ref ref="stdout" />
	</logger>
	
	<logger name="com.wittyconsulting.backbone.service.support.jdbc">
		<level value="DEBUG" />
		<appender-ref ref="app" />
		<appender-ref ref="stdout" />
	</logger>
	
	<logger name="org.springframework.jdbc.core">
		<level value="TRACE" />
		<appender-ref ref="app" />
		<appender-ref ref="sql" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="org.aspectj.weaver">
		<level value="DEBUG" />
		<appender-ref ref="app" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="java.sql">
		<level value="DEBUG" />
		<appender-ref ref="sql" />
		<appender-ref ref="stdout" />
	</logger>
	
	<logger name="org.apache">
		<level value="INFO" />
		<appender-ref ref="app" />
        <appender-ref ref="stdout" />
	</logger>

</log4j:configuration>