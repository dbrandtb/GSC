<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    
   <bean id="principalConfigWorkflow" class="mx.com.aon.configurador.configworkflow.web.PrincipalConfigWorkflowAction" abstract="true">
       <property name="catalogManager" ref="catalogManager"/>
       <property name="pagerManager" ref="pagerManager"/>
       <property name="configWorkFlowManager" ref="configWorkFlowManager"/>
   </bean>
    
   <bean id="configuraWorkflow" class="mx.com.aon.configurador.configworkflow.web.ConfiguraWorkflowAction" scope="prototype" parent="principalConfigWorkflow">
   </bean>
   
   <bean id="configuraWorkflowPasos" class="mx.com.aon.configurador.configworkflow.web.ConfiguraWorkflowPs2Action" scope="prototype" parent="principalConfigWorkflow">
   </bean>

   <bean id="configuraWorkflowOpciones" class="mx.com.aon.configurador.configworkflow.web.ConfiguraWorkflowPs3Action" scope="prototype" parent="principalConfigWorkflow">
   </bean>
   
   <bean id="configuraWorkflowVistaPrevia" class="mx.com.aon.configurador.configworkflow.web.ConfiguraWorkflowVistaCompletaAction" scope="prototype" parent="principalConfigWorkflow">
   </bean>
</beans>
