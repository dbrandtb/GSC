<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!--
	Action asociado por inyeccion al archivo de conf. de struts-test para el servicio de consulta
	para los datos de la tabla paginada 
	-->
    <bean id="pagingAction" class="mx.com.aon.test.web.PagingAction" scope="prototype">
    	<property name="pagingManager" ref="pagingManager"/>
    </bean>

	<!-- 
	Action asociado por inyeccion al archivo de conf. de struts-test para el servicio de exportacion
	de los datos a diversos formatos 
	-->
    <bean id="exportAction" class="mx.com.aon.test.web.ExportAction" scope="prototype">
        <property name="exportMediator" ref="exportMediator"/>
        <property name="exportModel" ref="exportModelRecibos"/>
    </bean>

	<!-- 
	Dependencia agregada de servicio que exporta los datos a un objeto con el modelo
	para poder ser exportados
	-->
    <bean id="exportModelRecibos" class="mx.com.aon.test.service.impl.ExportReciboManagerImpl" scope="prototype">
        <property name="endpoints">
            <map>
            <entry key="EXPORT_RECIBO"><ref bean="EXPORT_RECIBO"/></entry>
            </map>
        </property>
    </bean>

</beans>
