<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    
    
    <bean id="principalConfPantallas" class="mx.com.aon.configurador.pantallas.web.PrincipalConfPantallaAction" abstract="true">
        <property name="catalogManager" ref="catalogManager"/>
        <property name="pagerManager" ref="pagerManager"/>
        <property name="configuradorManager" ref="configuradorPantallasManager"/>
        <property name="configuradorManagerJdbcTemplate" ref="configuradorPantallasManagerJdbcTemplate"/>
    </bean>
    
    
   <bean id="buscaConjuntosPantallas" class="mx.com.aon.configurador.pantallas.web.ConsultaConjuntosAction" scope="prototype" parent="principalConfPantallas">
	     <property name="exportMediator" ref="exportMediator"/>
   </bean>
	
  <bean id="parametrosConjuntoAction" class="mx.com.aon.configurador.pantallas.web.ParametrosConjuntoAction" scope="prototype" parent="principalConfPantallas"/>
   
  <bean id="datosPantallaAction" class="mx.com.aon.configurador.pantallas.web.DatosPantallaAction" scope="prototype" parent="principalConfPantallas">
  	<property name="masterTransformer" ref="masterTransformer" />
        <property name="configuradorManager" ref="configuradorPantallasManager"/>
  </bean>

  <bean id="vistaPreviaAction" class="mx.com.aon.configurador.pantallas.web.VistaPreviaAction" scope="prototype" parent="principalConfPantallas"/>   
	
  <bean id="activacionConjuntoAction" class="mx.com.aon.configurador.pantallas.web.ActivacionConjuntoAction" scope="prototype" parent="principalConfPantallas"/>    
   
  <bean id="fileTreeAction" class="mx.com.aon.configurador.pantallas.web.FileTreeAction" scope="prototype" parent="principalConfPantallas"/>
   
   
</beans>
