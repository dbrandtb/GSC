<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@192.168.1.190:1527:acwqa"/>
        <property name="username" value="ice_configuring"/>
        <property name="password" value="ice_configuring"/>
        <!--
        <property name="maxActive" value="30"/>
        <property name="maxIdle" value="10"/>
        <property name="maxWait" value="1000"/>
        <property name="defaultAutoCommit" value="true"/>
        -->
    </bean>
    
    <!-- <jee:jndi-lookup id="dataSource" jndi-name="jdbc/Aon"/> -->

    <!-- Transaction manager for Spring JDBC -->
    <bean id="transactionManager"
        class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="jdbcDao"
        class="com.wittyconsulting.backbone.service.support.jdbc.dao.XMLJdbcDao">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="jdbcService"
        class="com.wittyconsulting.backbone.service.support.jdbc.JdbcService">
        <property name="xmlDao" ref="jdbcDao" />
    </bean>

    <!-- Agregado para setear el contexto de VPD -->
    <bean class=
        "org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
        <property name="beanNames">
            <list>
                <value>dataSource</value>
            </list>
        </property>
        <property name="interceptorNames">
            <list>
                <value>dataAccessInterceptor</value>
            </list>
        </property>
        <property name="proxyTargetClass" value="false"/>
    </bean>

    <bean id="dataAccessInterceptor" class="mx.com.aon.portal.util.ConnectionCallInterceptor"/>

    <!-- Fin Agregado para setear el contexto de VPD -->







    <bean id="processResultDAO" class="mx.com.aon.portal.dao.ProcessResultDAO">
       <property name="dataSource" ref="dataSource" />
    </bean>

	<bean id="menuPrincipalDAO" class="mx.com.aon.portal.dao.MenuPrincipalDAO">
       <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="nativeJdbcExtractor"
    class="org.springframework.jdbc.support.nativejdbc.SimpleNativeJdbcExtractor"
    lazy-init="true"/>

    <!-- LobHandler for Oracle JDBC drivers -->
    <!-- (refers to the NativeJdbcExtractor above to get access to native OracleConnections) -->
    <bean id="oracleLobHandler" class="org.springframework.jdbc.support.lob.OracleLobHandler" lazy-init="true">
        <property name="nativeJdbcExtractor"><ref local="nativeJdbcExtractor"/></property>
    </bean>

	<!--bean id="mediaDAO" class="mx.com.aon.catbo.dao.MediaDAOImpl">
       <property name="dataSource" ref="dataSource" />
        <property name="lobHandler"><ref bean="oracleLobHandler"/></property>
    </bean-->

</beans>

